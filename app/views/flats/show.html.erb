<div class="container">
  <h1 class="text-center"><%= @flat.name %></h1>

    <div class="row">
      <div class="col-4">
        <div class="image-wrapper">
          <img src=<%= @flat.photo %> alt="flat photo" height="400">
        </div>
      </div>

      <div class="col-4 d-flex">
        <div class="text-wrapper w-100">
          <div class="group">
            <h4>Description:</h4>
            <p><%= @flat.description %></p>
          </div>
          <div class="group">
            <h4>Address:</h4>
            <p><%= @flat.address %></p>
          </div>
          <div class="group">
            <h4>Price:</h4>
            <p>â‚¬ <%= @flat.price %></p>
          </div>
          <div class="group">
            <h4>Capacity:</h4>
            <p><%= @flat.capacity %></p>
          </div>

          <div class="button d-flex w-100 justify-content-between">
            <%= link_to new_flat_booking_path(@flat), class: "book-button" do %>
              Book
            <% end %>

            <% if policy(@flat).edit? %>
              <%= link_to "Edit this flat", edit_flat_path(@flat), class: "book-button" %>
            <% end %>

            <%= button_to "Delete", @flat, method: :delete, class: "book-button" if policy(@flat).destroy? %>
          </div>

        </div>
      </div>

      <div class="col-4">
      <!-- MAP -->
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
