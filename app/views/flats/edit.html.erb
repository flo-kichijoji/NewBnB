<div class="main-div">
  <div class="form">
    <h1>Edit Flat</h1>
    <hr>

    <%= form_for(@flat, url: flat_path(@flat), method: :patch) do |f| %>
      <p>
        <%= f.label :name %> <br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :address %> <br>
        <%= f.text_field :address %>
      </p>
      <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.label :price %> <br>
        <%= f.number_field :price %>
      </p>
      <p>
        <%= f.label :capacity %> <br>
        <%= f.number_field :capacity %>
      </p>
      <p>
        <%= f.submit "Update" %>
      </p>
    <% end %>
  </div>
</div>
