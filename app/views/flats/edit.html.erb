<h1>Edit Flat</h1>

<%= form_for(@flat, url: flat_path(@flat), method: :patch) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

  <%= f.label :availability %>
  <%= f.date_field :availability %>

  <%= f.submit "Update" %>
<% end %>
